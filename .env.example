# SmartSheetConnect Environment Variables
# Copy this file to .env and fill in your actual values
# Never commit .env to version control!

# Required: Google OAuth Credentials
GOOGLE_CLIENT_ID=your-google-client-id.apps.googleusercontent.com
GOOGLE_CLIENT_SECRET=your-google-client-secret
GOOGLE_REFRESH_TOKEN=your-google-refresh-token

# Required: Notification Email
NOTIFICATION_EMAIL=your-email@example.com

# Optional: Organization Name (used in spreadsheet naming)
ORGANIZATION_NAME=Your Organization Name

# Optional: Use Specific Spreadsheet (overrides name-based search)
SPREADSHEET_ID=your-spreadsheet-id

# Optional: Slack Webhook URL
SLACK_WEBHOOK_URL=https://hooks.slack.com/services/YOUR/WEBHOOK/URL

# Optional: Server Configuration
PORT=5000
HOST=localhost

# Optional: CORS Configuration
# Development: "*" (allows all origins)
# Production: "https://yoursite.com,https://www.yoursite.com" (comma-separated)
ALLOWED_ORIGINS=*

# Optional: Node Environment
NODE_ENV=development
